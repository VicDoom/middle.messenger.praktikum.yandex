<div class="input">
    <label for="{{id}}" class="input__label">{{label}}</label>
    <input 
        type="{{defaultValue type "text"}}"
        value="{{value}}"
        placeholder="{{placeholder}}"
        class="input__field {{#if helper-text}}input__field--error{{/if}}"
    />
    {{#if helper-text}}
        <label for="{{id}}" class="input__helper">{{helper-text}}</label>
    {{/if}}
</div>